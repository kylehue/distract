{
   "name": "distract",
   "private": true,
   "version": "0.0.3",
   "type": "module",
   "scripts": {
      "dev": "concurrently \"vite\" \"npm:py:dev\"",
      "build": "npm run clean && npm run py:build && vue-tsc && vite build && electron-builder",
      "py:dev": "(if not exist py\\venv (python -m venv py\\venv)) && py\\venv\\Scripts\\python -m pip install -r py/requirements.txt && py\\venv\\Scripts\\python py/main.py",
      "py:build": "py\\venv\\Scripts\\python -m PyInstaller py\\main.spec --distpath dist-py",
      "preview": "vite preview",
      "clean": "rimraf dist dist-electron dist-py release",
      "publish": "electron-builder --publish=always"
   },
   "dependencies": {
      "@phosphor-icons/vue": "^2.2.1",
      "@tailwindcss/vite": "^4.1.13",
      "dotenv": "^17.2.3",
      "socket.io-client": "^4.8.1",
      "tailwindcss": "^4.1.13",
      "vue": "^3.4.21",
      "vue-router": "^4.5.1"
   },
   "devDependencies": {
      "@vitejs/plugin-vue": "^5.0.4",
      "concurrently": "^9.2.1",
      "electron": "^30.0.1",
      "electron-builder": "^24.13.3",
      "electron-updater": "^6.7.3",
      "naive-ui": "^2.42.0",
      "rimraf": "^5.0.10",
      "typescript": "^5.2.2",
      "vfonts": "^0.0.3",
      "vite": "^5.1.6",
      "vite-plugin-electron": "^0.28.6",
      "vite-plugin-electron-renderer": "^0.14.5",
      "vue-tsc": "^2.0.26"
   },
   "main": "dist-electron/main.js",
   "files": [
      "dist-electron",
      "dist",
      "dist-py/**"
   ],
   "build": {
      "extraResources": [
         {
            "from": "dist-py/",
            "to": "dist-py",
            "filter": [
               "**/*"
            ]
         }
      ],
      "directories": {
         "output": "release"
      },
      "appId": "Distract.StudentClient",
      "productName": "Distract",
      "publish": [
         {
            "provider": "github",
            "owner": "kylehue",
            "repo": "distract"
         }
      ],
      "win": {
         "target": "nsis",
         "icon": "public/distract.ico"
      },
      "mac": {
         "target": "dmg"
      },
      "linux": {
         "target": "AppImage"
      }
   }
}
